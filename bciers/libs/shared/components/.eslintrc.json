{
  "extends": ["plugin:@nx/react", "../../../.eslintrc.json"],
  "globals": { "vi": true },
  "parserOptions": {
    "project": ["./tsconfig(.*)?.json"]
  },
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "avoidEscape": true
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
