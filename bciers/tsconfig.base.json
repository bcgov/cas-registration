{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "rootDirs": ["."],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015",
    "types": ["vitest/globals"],
    "paths": {
      "@/*": ["apps/registration1/*"],
      "@/dashboard/*": ["apps/dashboard/*"],
      "@/registration/*": ["apps/registration/*"],
      "@bciers/actions/server": ["libs/shared/actions/src/server.ts"],
      "@bciers/components": ["libs/shared/components/src/index.ts"],
      "@bciers/components/*": ["libs/shared/components/src/lib/*"],
      "@bciers/components/server": ["libs/shared/components/src/server.ts"],
      "@bciers/data/*": ["libs/shared/data/*"],
      "@bciers/img/*": ["libs/shared/img/*"],
      "@bciers/middlewares/server": ["libs/shared/middlewares/src/server.ts"],
      "@bciers/styles": ["libs/shared/styles/src/index.ts"],
      "@bciers/styles/*": ["libs/shared/styles/src/lib/*"],
      "@bciers/testConfig/*": ["libs/shared/testConfig/src/*"],
      "@bciers/types": ["libs/shared/types/src/index.ts"],
      "@bciers/utils/*": ["libs/shared/utils/*"],
      "@bciers/utils/server": ["libs/shared/utils/server.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
  "exclude": ["node_modules", "tmp"]
}
