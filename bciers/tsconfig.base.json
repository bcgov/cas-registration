{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "rootDirs": ["."],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015",
    "types": ["vitest/globals"],
    "paths": {
      "@/*": ["apps/registration1/*"],
      "@/coam/*": ["apps/coam/*"],
      "@/dashboard/*": ["apps/dashboard/*"],
      "@/registration/*": ["apps/registration/*"],
      "@reporting/*": ["apps/reporting/*"],
      "@bciers/actions": ["libs/actions/src/index.ts"],
      "@bciers/actions/server": ["libs/actions/src/server.ts"],
      "@bciers/components": ["libs/components/src/index.ts"],
      "@bciers/components/*": ["libs/components/src/*"],
      "@bciers/components/server": ["libs/components/src/server.ts"],
      "@bciers/img/*": ["libs/img/*"],
      "@bciers/middlewares": ["libs/middlewares/src/index.ts"],
      "@bciers/styles": ["libs/styles/src/index.ts"],
      "@bciers/styles/*": ["libs/styles/src/*"],
      "@bciers/testConfig/*": ["libs/testConfig/src/*"],
      "@bciers/utils/*": ["libs/utils/*"],
      "@bciers/types/*": ["libs/types/src/*"],
      "@bciers/data/*": ["libs/data/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
  "exclude": ["node_modules", "tmp"]
}
