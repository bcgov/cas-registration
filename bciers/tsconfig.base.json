{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDirs": [".", "../client/app"],
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bciers/components": ["libs/shared/components/src/index.ts"],
      "registration/*": ["../client/app/*"],
      "@/*": ["../client/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
