{
  "extends": ["next", "../../.eslintrc.json", "prettier"],
  "ignorePatterns": ["!**/*", ".next/**/*"],
  "rules": {
    "no-console": 1,
    "no-var": 2,
    "@next/next/no-html-link-for-pages": ["error", "apps/registration/app"]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {},
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": ["apps/reporting/tsconfig(.*)?.json"],
        "tsConfigRootDir": "./"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "rules": {}
    }
  ]
}
