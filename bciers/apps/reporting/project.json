{
  "name": "reporting",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/reporting",
  "projectType": "application",
  "tags": ["layer:frontend"],
  "targets": {
    "dev": {
      "options": {
        "port": 5000
      }
    },
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "dev",
      "options": {
        "outputPath": "dist/reporting",
        "generateLockfile": true
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "dependsOn": ["build"],
      "defaultConfiguration": "dev",
      "options": {
        "engine": "docker",
        "context": "dist/reporting",
        "file": "Dockerfile",
        "build-args": ["application_path=reporting"],
        "tags": ["cas-reporting:latest"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {}
    },
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/reporting-e2e",
        "command": "if [ -n \"$HAPPO_API_KEY\" ] && [ -n \"$HAPPO_API_SECRET\" ]; then happo -- playwright test; else playwright test; fi"
      }
    },
    "e2e:ci": {
      "executor": "nx:run-commands",
      "//": "This target is used by the CI pipeline to detect NX affected apps that we want to run e2e on"
    },
    "e2e:ui": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/reporting-e2e",
        "command": "if [ -n \"$HAPPO_API_KEY\" ] && [ -n \"$HAPPO_API_SECRET\" ]; then happo -- playwright test --ui; else playwright test --ui; fi"
      }
    },
    "e2e:report": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/reporting-e2e",
        "command": "playwright show-report"
      }
    }
  }
}
