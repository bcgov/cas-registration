{
  "extends": ["next", "../../.eslintrc.json", "prettier"],
  "ignorePatterns": ["!**/*", ".next/**/*"],
  "parserOptions": {
    "project": ["apps/administration/tsconfig(.*)?.json"],
    "tsConfigRootDir": "./"
  },
  "rules": {
    "@next/next/no-html-link-for-pages": [
      "error",
      "apps/administration/src/app"
    ]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "rules": {}
    }
  ]
}
