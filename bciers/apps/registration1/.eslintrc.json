{
  "extends": ["next", "../../.eslintrc.json", "prettier"],
  "ignorePatterns": ["!**/*", ".next/**/*"],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.test.{ts,tsx}",
          "test.{ts,tsx,js,jsx}",
          "test-*.{ts,tsx,js,jsx}",
          "**/*{.,_}{test,spec}.{ts,tsx,js,jsx}",
          "**/e2e/**/*.{ts,tsx,js,jsx}",
          "**/playwright.config.{ts,js}",
          "**/tailwind.config.{ts,js}",
          "**/next.config.{ts,js}",
          "**/.happo.{ts,js}"
        ]
      }
    ],
    "import/extensions": [
      "error",
      "never",
      {
        "json": "always"
      }
    ],
    "no-console": 1,
    "no-var": 2,
    "@next/next/no-html-link-for-pages": ["error", "apps/registration/app"]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@typescript-eslint/dot-notation": "error",
        "@typescript-eslint/naming-convention": "error"
      },
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": ["apps/registration1/tsconfig(.*)?.json"],
        "tsConfigRootDir": "./"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "rules": {}
    }
  ]
}
