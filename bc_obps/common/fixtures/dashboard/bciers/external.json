                "conditions": [
                  {
                    "api": "registration/user-operators/current/is-current-user-approved-admin",
                    "field": "approved",
                    "operator": "equals",
                    "value": true
                  }
                ]
              }
            ]
          },
          {
            "title": "Registration",
            "href": "/registration",
            "icon": "Entrance",
