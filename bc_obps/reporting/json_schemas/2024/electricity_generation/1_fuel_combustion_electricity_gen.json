{
  "type": "object",
  "title": "Fuel combustion for electricity generation",
  "default": {
    "units": [
      {
        "fuels": [
          {
            "emissions": [{}]
          }
        ]
      }
    ]
  },
  "properties": {
    "units": {
      "type": "array",
      "title": "Units",
      "items": {
        "type": "object",
        "properties": {
          "unitName": {
            "title": "Unit Name",
            "maxLength": 200,
            "type": "string"
          },
          "unitType": {
            "title": "Unit Type",
            "type": "string",
            "enum": ["Boiler", "Kiln", "Other"]
          },
          "generationType": {
            "title": "Generation Type",
            "type": "string",
            "enum": ["Cogeneration", "Non-Cogeneration"]
          },
          "nameplateCapacity": {
            "title": "Nameplate Capacity",
            "type": "number",
            "minimum": 0
          },
          "netPower": {
            "title": "Net Power",
            "type": "number",
            "minimum": 0
          },
          "fuels": {
            "title": "Fuel Data",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "fuelType": {
                  "type": "object",
                  "properties": {
                    "fuelName": {
                      "title": "Fuel Name",
                      "type": "string",
                      "enum": []
                    },
                    "fuelClassification": {
                      "title": "Fuel Classification",
                      "type": "string",
                      "readOnly": true
                    },
                    "fuelUnit": {
                      "title": "Fuel Unit",
                      "type": "string",
                      "readOnly": true
                    }
                  }
                },
                "fuelDescription": {
                  "title": "Fuel Description",
                  "maxLength": 500,
                  "type": "string"
                },
                "annualFuelAmount": {
                  "title": "Annual Fuel Amount",
                  "type": "number",
                  "minimum": 0
                },
                "emissions": {
                  "title": "Emission Data",
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "gasType": {
                        "title": "Gas Type",
                        "type": "string",
                        "enum": []
                      },
                      "emission": {
                        "title": "Emission",
                        "type": "number",
                        "minimum": 0
                      },
                      "equivalentEmission": {
                        "title": "Equivalent Emission",
                        "type": "string",
                        "readOnly": true,
                        "default": "Value will be computed upon saving"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "dependencies": {
          "generationType": {
            "oneOf": [
              {
                "properties": {
                  "generationType": {
                    "enum": ["Cogeneration"]
                  },
                  "cycleType": {
                    "type": "string",
                    "title": "Cycle Type",
                    "enum": ["Topping", "Bottoming"]
                  },
                  "thermalOutput": {
                    "title": "Thermal Output",
                    "type": "number",
                    "minimum": 0
                  },
                  "steamHeatAcquisitionProvider": {
                    "title": "Steam/Heat Acquisition Provider",
                    "type": "string"
                  },
                  "steamHeatAcquisitionAmount": {
                    "title": "Steam/Heat Acquisition Amount Acquired",
                    "type": "number",
                    "minimum": 0
                  },
                  "supplementalFiringPurpose": {
                    "title": "Supplemental Firing Purpose",
                    "type": "string",
                    "enum": ["Industrial output", "Electricity Generation"]
                  }
                }
              },
              {
                "properties": {
                  "generationType": {
                    "enum": ["Non-Cogeneration"]
                  }
                }
              }
            ]
          }
        }
      }
    }
  }
}
