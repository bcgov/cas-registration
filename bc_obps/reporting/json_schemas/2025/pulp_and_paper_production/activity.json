{
  "name": "Pulp and paper production",
  "type": "object",
  "properties": {
    "id": {
      "type": "number",
      "description": "The unique identifier for this activity"
    },
    "biogenicIndustrialProcessEmissions": {
      "type": "object",
      "title": "Biogenic Industrial Process Emissions",
      "properties": {
        "doesUtilizeLimeRecoveryKiln": {
          "type": "boolean",
          "title": "Does this mill utilize a lime recovery kiln?"
        }
      },
      "dependencies": {
        "doesUtilizeLimeRecoveryKiln": {
          "oneOf": [
            {
              "properties": {
                "doesUtilizeLimeRecoveryKiln": { "const": false }
              }
            },
            {
              "properties": {
                "doesUtilizeLimeRecoveryKiln": { "const": true },
                "biogenicEmissionsSplit": {
                  "type": "object",
